  <div id="slide1" class="carousel-item relative w-full ">
    <img src="/img/beach.png" class="w-full" />
    <div class="absolute flex justify-between transform -translate-y-1/2 left-5 right-5 top-1/2">
      <a href="#slide4" class="btn btn-circle">❮</a> 
      <a href="#slide2" class="btn btn-circle">❯</a>
    </div>
  </div> 
  <div id="slide2" class="carousel-item relative w-full">
    <img src="/img/beach.png" class="w-full" />
    <div class="absolute flex justify-between transform -translate-y-1/2 left-5 right-5 top-1/2">
      <a href="#slide1" class="btn btn-circle">❮</a> 
      <a href="#slide3" class="btn btn-circle">❯</a>
    </div>
  </div> 
  <div id="slide3" class="carousel-item relative w-full">
    <img src="https://daisyui.com/images/stock/photo-1414694762283-acccc27bca85.jpg" class="w-full" />
    <div class="absolute flex justify-between transform -translate-y-1/2 left-5 right-5 top-1/2">
      <a href="#slide2" class="btn btn-circle">❮</a> 
      <a href="#slide4" class="btn btn-circle">❯</a>
    </div>
  </div> 
  <div id="slide4" class="carousel-item relative w-full">
    <img src="https://daisyui.com/images/stock/photo-1665553365602-b2fb8e5d1707.jpg" class="w-full" />
    <div class="absolute flex justify-between transform -translate-y-1/2 left-5 right-5 top-1/2">
      <a href="#slide3" class="btn btn-circle">❮</a> 
      <a href="#slide1" class="btn btn-circle">❯</a>
    </div>
  </div>
</div>


<div class="container mt-5">
  <h1 class="text-center font-bold text-4xl text-cyan-500">All Places</h1>
  <a href="/places/create">Add Place</a>


  <div class="flex items-center justify-center p-5">
    <div class="rounded-lg  p-5">
      <div class="flex">
        <div class="flex w-10 items-center justify-center rounded-tl-lg rounded-bl-lg border-r border-cyan-500 bg-gray-200 p-5">
          <svg viewBox="0 0 20 20" aria-hidden="true" class="pointer-events-none absolute w-5 fill-cyan-500 transition">
            <path d="M16.72 17.78a.75.75 0 1 0 1.06-1.06l-1.06 1.06ZM9 14.5A5.5 5.5 0 0 1 3.5 9H2a7 7 0 0 0 7 7v-1.5ZM3.5 9A5.5 5.5 0 0 1 9 3.5V2a7 7 0 0 0-7 7h1.5ZM9 3.5A5.5 5.5 0 0 1 14.5 9H16a7 7 0 0 0-7-7v1.5Zm3.89 10.45 3.83 3.83 1.06-1.06-3.83-3.83-1.06 1.06ZM14.5 9a5.48 5.48 0 0 1-1.61 3.89l1.06 1.06A6.98 6.98 0 0 0 16 9h-1.5Zm-1.61 3.89A5.48 5.48 0 0 1 9 14.5V16a6.98 6.98 0 0 0 4.95-2.05l-1.06-1.06Z"></path>
          </svg>
        </div>
        <input type="text" class="w-full  bg-gray-200 pl-2 text-base font-semibold outline-0" placeholder="" id="">
        <input type="button" value="Search" class="bg-cyan-500 p-2 rounded-tr-lg rounded-br-lg text-white font-semibold hover:bg-cyan-800 transition-colors">
      </div>
    </div>
  </div>

  <div class="flex flex-wrap mt-5 mx-4">
    <% for(const place of places) { %>
      <div class="w-full md:w-1/2 lg:w-1/4 px-4 mb-8">
        <a href="/places/<%=place._id %>">
        <div class="flex card bg-base-100 shadow-xl">
          <figure><img src="/img/beach.png" alt="Shoes" /></figure>
          <div class="card-body">
            <h2 class="card-title line-clamp-1  ">
              <%= place.title %>
              <div class="badge badge-secondary">NEW</div>
            </h2>
            <p class="line-clamp-2"><%= place.description %></p>
            <div class="card-actions justify-end">
              <div class="badge badge-outline"> Rp <%= place.price %></div>
            </div>
          </div>
        </div>
      </a>
      </div>
    <% } %>
  </div>
  

</div>
